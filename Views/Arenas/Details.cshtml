@model Arena

@{
    ViewData["Title"] = "Details";
}

    <div class="card col-md-8">
        <div class="card-header">
            <h4>Details for : @Html.DisplayFor(model => model.ArenaName)</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ArenaNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ArenaNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ArenaName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ArenaName)
                </dd>                
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Country)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <div>
                <a class="btn btn-sm btn-success" asp-controller="Arenas" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-sm btn-success" asp-controller="Arenas" asp-action="IndexSearch">Back to Arenas</a>
            </div>
        </div>
    </div>