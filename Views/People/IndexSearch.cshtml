@model IEnumerable<Person>

@{
    ViewData["Title"] = "IndexSearchPerson";

}


<div class="card col-md-12">
    <div class="card-header col-md-12 text-center">
        <h6>
            ALL People - Firstname - Search
        </h6>
        <div class="card-header col-md-12">
            <h6>
                <a class="btn btn-sm btn-success" asp-controller="People" asp-action="Create">Register New Person</a>
                <a class="btn btn-sm btn-success" asp-controller="Administration" asp-action="Admin">Back to Admin menu</a>
            </h6>
        </div>
        <div class="card-header col-md-12 text-center">
            <form asp-controller="People" asp-action="IndexSearch">
                <p>
                    Firstname: <input type="text" name="SearchString">

                    <input type="submit" value="Search" />
                </p>
            </form>
        </div>
    </div>
    <div class="card-body col-md-12">
        <table class="table table-responsive-sm table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumbers)</th>
                    <th>@Html.DisplayNameFor(model => model.PersonalEmail)</th>                    
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(p => p.FirstName))
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.FullName)</td>
                        <td> @Html.DisplayFor(modelItem => item.PhoneNumbers)</td>
                        <td>@Html.DisplayFor(modelItem => item.PersonalEmail)</td>                        

                        <td><a class="btn btn-sm btn-success" asp-controller="People" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        <td><a class="btn btn-sm btn-success" asp-controller="People" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
